<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmokeAlerter.CreateGroupOptionsPage"
             Title="Create Group"
             x:Name="CreateGroupOptionsPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Group Name" x:Name="createGroupNameEntry"/>
            <Button Text="Add Members" BackgroundColor="Gray" Clicked="AddMembers_Clicked"/>
            <Button Text="Create Group" Clicked="CreateGroup_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>